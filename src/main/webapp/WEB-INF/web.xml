<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>com.pptpdx.resources.ClassroomApplicationListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>Oauth2AuthorizationCodeServlet</servlet-name>
        <servlet-class>com.pptpdx.oauth.Oauth2AuthorizationCodeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>com.pptpdx.oauth.TestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Oauth2AuthorizationCodeServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Oauth2CallbackServlet</servlet-name>
        <servlet-class>com.pptpdx.oauth.Oauth2CallbackServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Oauth2CallbackServlet</servlet-name>
        <url-pattern>/oauth2callback</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/TestServlet</url-pattern>
    </servlet-mapping>
</web-app>
